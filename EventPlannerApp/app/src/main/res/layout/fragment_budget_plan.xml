<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="32dp"
    android:gravity="center_horizontal"
    android:id="@+id/budget_plan_layout"
    tools:context=".fragments.organizator.BudgetPlanFragment">

    <!-- First TextView -->
    <TextView
        android:id="@+id/textViewProductsServices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suggestions"
        android:textSize="25sp"
        android:textStyle="bold" />

    <!-- Second TextView -->
    <TextView
        android:id="@+id/textViewEventSuggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(based on selected event type)"
        android:textSize="20sp"
        android:layout_marginTop="16dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <!-- Products Button -->
        <Button
            android:id="@+id/buttonProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Products"
            android:layout_marginEnd="16dp"/>

        <!-- Services Button -->
        <Button
            android:id="@+id/buttonServices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Services"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:id="@+id/downView"
        android:padding="16dp"
        android:background="@drawable/border_black"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/createItemListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create planned item list"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="100dp"/> <!-- Adjust margin as needed -->

</LinearLayout>
