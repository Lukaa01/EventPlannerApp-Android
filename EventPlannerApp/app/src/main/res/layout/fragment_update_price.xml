<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.vlasnik.UpdatePriceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="Enter new price:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:text="@string/new_price" />
        <EditText
            android:id="@+id/pricelistPriceEditText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Type price..."
            android:inputType="number"
            android:digits="0123456789" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:text="@string/new_discount" />
        <EditText
            android:id="@+id/pricelistDiscountEditText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Type discount..."
            android:inputType="number"
            android:digits="0123456789" />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <Button
        android:id="@+id/update_price_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Update" />

</LinearLayout>